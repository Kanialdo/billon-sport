<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ViewFlipper
		android:id="@+id/view_flipper"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:id="@+id/ll_result"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:id="@+id/text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"/>

			<TextView
				android:id="@+id/text2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"/>

			<TextView
				android:id="@+id/tv_quality"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/ll_loading"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/tv_loading"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="loading"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/ll_error"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_error"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:text="searching best teams"/>

		</LinearLayout>

	</ViewFlipper>

	<LinearLayout
		android:id="@+id/linearLayout2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/background_light"
		android:gravity="end"
		android:orientation="horizontal"
		android:padding="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@android:id/list">

		<Button
			android:id="@+id/b_shuffle"
			style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:text="@string/action_shuffle"/>

		<Button
			android:id="@+id/b_create"
			style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:text="@string/action_create_match"/>

	</LinearLayout>

</android.support.constraint.ConstraintLayout>